	мОшибки = Новый Массив();
	чслТаймаут = Число(XMLСтрока(чслТаймаутПоУмолчанию));
	
	Для Каждого Строка Из тзТопикиРазделы_Чтение Цикл
		
		Топик = XMLСтрока(Строка.Topic);
		Раздел = Число(XMLСтрока(Строка.Partition));
			
		сткРезультатПолучения = Получатель_ПолучитьТекущееСмещениеРаздела(Топик, Раздел, чслТаймаут);
