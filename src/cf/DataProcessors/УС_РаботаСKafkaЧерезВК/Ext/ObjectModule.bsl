Функция Инициализация_Чтение() Экспорт
	
	Результат = Ложь;
	
	Получатель_Закрыть();
	
	сткРезультат = СоздатьПолучателя();
	Если Не сткРезультат.булУспешно Тогда
		Сообщить(сткРезультат.стрОписаниеОшибки);	
		Возврат Результат;
	КонецЕсли;
	
	Для Каждого Строка Из Чтение_НастройкиГлобальные Цикл
		сткРезультат = Получатель_УстановитьПараметрГлобальный(Строка.Key, Строка.Value);
		Если Не сткРезультат.булУспешно Тогда
			Сообщить(сткРезультат.стрОписаниеОшибки);	
			Возврат Результат;
		КонецЕсли;
	КонецЦикла;
	
	Для Каждого Строка Из Чтение_НастройкиТопика Цикл
		сткРезультат = Получатель_УстановитьПараметрТопика(Строка.Key, Строка.Value);
		Если НЕ сткРезультат.булУспешно Тогда
			Сообщить(сткРезультат.стрОписаниеОшибки);	
			Возврат Результат;
		КонецЕсли;
	КонецЦикла;
		
	сткРезультат = Получатель_Инициализировать(Адрес_Чтение, GroupID_Чтение);
	Если Не сткРезультат.булУспешно Тогда
		Сообщить(сткРезультат.стрОписаниеОшибки);	
		Возврат Результат;
	КонецЕсли;
	
	Если ПодпискаТопики_Чтение = 1 Тогда
		мТопики = Новый Массив();
		Для Каждого стрТопик Из тзТопики_Чтение Цикл
			Если Не мТопики.Найти(стрТопик.Topic) = Неопределено Тогда
				Продолжить;
			КонецЕсли;
			
			мТопики.Добавить(стрТопик.Topic);			
		КонецЦикла;
		
		сткРезультат = Получатель_Подписаться(мТопики);
		Если Не сткРезультат.булУспешно Тогда
			Сообщить(сткРезультат.стрОписаниеОшибки);	
			Возврат Результат;
		КонецЕсли;
	Иначе
		сткРезультат = Получатель_ОчиститьСписокНазначений();
		Если Не сткРезультат.булУспешно Тогда
			Сообщить(сткРезультат.стрОписаниеОшибки);	
			Возврат Результат;
		КонецЕсли;

		Для Каждого стрТопик Из тзТопикиРазделы_Чтение Цикл			
			сткРезультат = Получатель_ДобавитьНазначение(стрТопик.Topic, стрТопик.Partition, ?(стрТопик.Offset = -1, Неопределено, стрТопик.Offset));
			Если Не сткРезультат.булУспешно Тогда
				Сообщить(сткРезультат.стрОписаниеОшибки);	
				Возврат Результат;
			КонецЕсли;
		КонецЦикла;
		
		сткРезультат = Получатель_Назначить();
		Если Не сткРезультат.булУспешно Тогда
			Сообщить(сткРезультат.стрОписаниеОшибки);	
			Возврат Результат;
		КонецЕсли;		
	КонецЕсли;
	
	Результат = Истина;
	
	Возврат Результат;
	
КонецФункции

